= form_for [:admin, @team] do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this admin_team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg
  %form
    .form-group.row
      %label.bold-font=t('team_member.picture')
      = f.file_field :avatar
    .form-group.row
      %label.bold-font=t('admin_form.name')
      = f.text_field :name, require: true, class: 'form-control'
    .form-group.row
      %label.bold-font=t('team_member.bio')
      = f.text_field :bio, require: true, class: 'form-control'
    .form-group.row
      %label.bold-font=t('team_member.sponsors')
      = f.text_area :sponsors, :cols => 50, :rows => 10, require: true, class: 'form-control'
    .form-group.row
      %button.button-admin-save.pull-right{:type => "submit"}=t('admin_form.save')
