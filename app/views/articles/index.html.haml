= render 'partials/nav'
#section-news
  .container-fluid
    - @articles.each do |article|
      .form-group.row
        .date-article.bold-font.col-md-1.col-md-offset-1.col-sm-2.col-xs-2 24.05
        .col-md-8.col-md-offset-1.col-sm-8.col-sm-offset-1.col-xs-8.col-xs-offset-1
          %h1.form-control-static= article.title
          %p.form-control-static= article.body.truncate(200)
      .form-group.row
        .col-md-1.col-md-offset-10.col-sm-1.col-sm-offset-10.col-xs-1.col-xs-offset-8
          = link_to t('home_general.more'), class: 'button button-news'
